<!-- Back to top button -->
<button id="backToTop" class="ee-back-to-top" type="button" aria-label="Повернутися вгору">↑</button>

<script>
  (function () {
    const topbar = document.querySelector(".ee-topbar");
    const btn = document.getElementById("backToTop");

    const onScroll = () => {
      const scrolled = window.scrollY > 10;
      if (topbar) topbar.classList.toggle("is-solid", scrolled);

      const showBtn = window.scrollY > 380;
      if (btn) btn.classList.toggle("is-visible", showBtn);
    };

    window.addEventListener("scroll", onScroll, { passive: true });
    onScroll();

    if (btn) {
      btn.addEventListener("click", () => window.scrollTo({ top: 0, behavior: "smooth" }));
    }
  })();
</script>
